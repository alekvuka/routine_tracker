<%= form_for [@user, @routine] do |f| %>
  <label>Name:</label>
  <%= f.text_field :name %><br><br>

  Routine avalable/visible from
  <%= f.select :start_time, options_for_select(['1:00am', '2:00am', '3:00am', '4:00am', '5:00am','6:00am',
   '7:00am', '8:00am', '9:00am', '10:00am', '11:00am', '12:00pm', '1:00pm', '2:00pm', '3:00pm', '4:00pm',

<h1><%=@routine.name%></h1>

Start Time: <%=@routine.start_time%> <br>
End Time: <%=@routine.end_time%> <br>
<br>
<br>
Tasks:
<br><br>
<%@routine.tasks.all.each do |task|%>
<li><%=task.name%></li>
<%end%>
<br>
<br>

<%if !User.find(session[:id]).routines.include?(@routine)%>
  <%=link_to("Add this routine to your routines", user_routine_add_path(User.find(session[:id]), @routine))%>
<%else%>
  You already have this routine!
<%end%>

<br>
<br>

<%if session[:id] == @routine.originator_id%>
  <%= link_to('Edit this routine', edit_user_routine_path(User.find(session[:id]), @routine)) %>
<%end%>
